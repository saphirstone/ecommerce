<% content_for :body_class, 'bg-light' %>

<section class="section kitten-show">
  <div class="columns">
    <div class="column is-8">
      <h1 class="title is-2"><%= @kitten.title %></h1>

      <ul class="pv1">
        <% if @kitten.race? %>
        <li class="inline-block pr3"><%= @kitten.race %></li>
        <% end %>

        <li class="inline-block pr3"><%= @kitten.color %></li>

        <% if @kitten.condition? %>
        <li class="inline-block pr3"><%= @kitten.condition %></li>
        <% end %>
      </ul>

      <div class="feature-image">
        <%= image_tag(@kitten.image_url(:default)) %>
      </div>

      <div class="content pa4 mt3 bg-white border-radius-3">

      <h3 class="subtitle is-4">Description</h3>
      <%= @kitten.description %>


      <h3 class="subtitle is-4 pt5">Product Specs</h3>

      <table class="table is-narrow">
        <% if @kitten.condition %>
        <tr>
          <td class="has-text-weight-bold">Condition:</td>
          <td><%= @kitten.condition %></td>
        </tr>
        <% end %>

        <% if @kitten.finish %>
          <tr>
            <td class="has-text-weight-bold">Finish:</td>
            <td><%= @kitten.finish %></td>
          </tr>
        <% end %>

        <% if @kitten.race %>
          <tr>
            <td class="has-text-weight-bold">race:</td>
            <td><%= @kitten.race %></td>
          </tr>
        <% end %>

        <tr>
          <td class="has-text-weight-bold">color:</td>
          <td><%= @kitten.color %></td>
        </tr>
      </table>
    </div>
    </div>
    <div class="column is-3 is-offset-1">
      <div class="bg-white pa4 border-radius-3">
        <h4 class="title is-5 has-text-centered"><%= number_to_currency(@kitten.price) %></h4>
        <p class="has-text-centered mb4">Sold by <%= @kitten.user.name %></p>
        <%= button_to 'Add to cart', line_items_path(kitten_id: @kitten), class: 'button is-warning add-to-cart' %>
      </div>
    </div>
  </div>

  <% if kitten_author(@kitten) %>
    <%= link_to 'Edit', edit_kitten_path(@kitten), class: 'button' %>
  <% end %>
</section>